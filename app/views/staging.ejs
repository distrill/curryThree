<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link type="text/css" rel="stylesheet" href="css/stylesheet.css"/>
		<title>Curry THREE</title>
	</head>
	<body>

		<div class="page-container">

			<div class="wide-container">
				<img src="img/temp-logo2.png" class="logo-img">
				<div class="divider"></div>
				<nav id="navbar" class="navbar">
					<ul>
						<a href="#"><li>
							one
						</li></a>
						<a href="#"><li>
							two
						</li></a>
						<a href="#"><li>
							three
						</li></a>
						<a href="#"><li>
							four
						</li></a>
						<a href="/newPost"><li>
							new post
						</li></a>
					</ul>
				</nav>
			</div>

			<div class="content-container">

				<%	for( var i in posts ) { %>
					<div class="news-elem">
						<p><a href="<%= posts[ i ].link %>"><%= posts[ i ].title %></a><span class="date-right">
							<%= posts[ i ].date.toString().split( ' ' ).slice( 1, 3 ).join( ' ' ) + ', ' +
								posts[ i ].date.toString().split( ' ' ).slice( 3, 4 ) %>
						</span></p>
						<a href="<%= posts[ i ].link %>">
							<img src="img/postThumbnails/<%= posts[ i ].thumbnail %>" class="news-elem-img">
						</a>
						<span class="copy"><%= posts[ i ].body %></span><br><br><br><br>
						<div class="post-remove-edit">
							<a href="post/<%=posts[ i ]._id %>">edit</a><br>
							<a href="post/remove/<%= posts[ i ]._id %>">remove</a>
						</div>
					</div>
				<% 	} %>


			<div class="wide-container">
				<div class="footer">
					<a href="#">contact us</a><a href="#"><span class="foot-right">advertise with us</span></a>
				</div>
			</div>

		</div>

	</body>
</html>
